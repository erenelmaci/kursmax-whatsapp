{
  "name": "kursmax-whatsapp",
  "version": "1.0.45",
  "description": "KursMax WhatsApp Otomatik Mesaj GÃ¶nderme Sistemi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "prebuild": "node build-setup.js",
    "build:win": "npm run prebuild && electron-builder --win --publish never --config electron-builder-win.yml",
    "build:mac": "npm run prebuild && electron-builder --mac --publish never --config electron-builder-mac.yml",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "build:all": "npm run prebuild && npm run build:win && npm run build:mac",
    "publish": "electron-builder --win --publish always",
    "release": "node release.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "node clean-dist.js",
    "build:win:clean": "npm run clean && npm run build:win",
    "build:mac:clean": "npm run clean && npm run build:mac",
    "build:all:clean": "npm run clean && npm run build:all"
  },
  "keywords": [
    "electron",
    "whatsapp",
    "automation",
    "education"
  ],
  "author": "KursMax",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^1.5.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bootstrap": "^5.3.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.5.0",
    "electron-updater": "^6.6.2",
    "jquery": "^3.7.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mssql": "^10.0.1",
    "puppeteer": "^24.10.2",
    "qrcode": "^1.5.3"
  },
  "build": {
    "appId": "com.kursmax.whatsapp",
    "productName": "KursMax WhatsApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache/**/*",
      "!node_modules/.bin/**/*",
      "!node_modules/.package-lock.json",
      "!dist/**/*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.md",
      "!**/.git/**/*",
      "!**/.vscode/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "node_modules/puppeteer",
        "to": "puppeteer",
        "filter": [
          "**/*",
          "!.local-chromium/**/*",
          "!.cache/**/*"
        ]
      },
      {
        "from": "node_modules/puppeteer/.local-chromium",
        "to": "puppeteer/.local-chromium",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/puppeteer/.cache",
        "to": "puppeteer/.cache",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "identity": null,
      "notarize": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "erenelmaci",
      "repo": "kursmax-whatsapp"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}